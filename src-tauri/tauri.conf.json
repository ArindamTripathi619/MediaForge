{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "MediaForge",
  "version": "1.0.0",
  "identifier": "com.devcrewx.mediaforge",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "MediaForge - YouTube Downloader & Media Converter",
        "width": 1400,
        "height": 900,
        "minWidth": 640,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/16x16.png",
      "icons/22x22.png",
      "icons/24x24.png",
      "icons/32x32.png",
      "icons/48x48.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "resources": [],
    "linux": {
      "deb": {
        "depends": [
          "yt-dlp",
          "ffmpeg", 
          "imagemagick"
        ]
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  }
}
